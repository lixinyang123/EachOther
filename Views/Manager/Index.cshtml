@model List<Article>

<link rel="stylesheet" href="/css/manager/index.css" />

<div class="container pt-5 pb-5">

    <div class="row">

        @foreach (var article in Model)
        {
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="row no-gutters">
                        <div class="col-md-4 cover">
                            <a href="/Article/Detail/@article.ArticleCode" class="img" style="background-image: url('@article.CoverUrl');"></a>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><a href="/Article/Detail/@article.ArticleCode">@article.Title</a></h5>
                                <p class="card-text">@article.Overview</p>
                                <p class="card-text"><small class="text-muted">@article.Date</small></p>
                                <div class="text-center">
                                    <a asp-controller="Manager" asp-action="EditArticle" asp-route-id="@article.ArticleCode" class="btn btn-warning">编辑</a>
                                    <a asp-controller="Manager" asp-action="RemoveArticle" asp-route-id="@article.ArticleCode" class="btn btn-danger">删除</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">上一页</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">下一页</a>
            </li>
        </ul>
    </nav>
</div>